<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/alpha"
        android:layout_width="fill_parent"
        android:layout_height="25dip"
        android:background="@color/white"
        android:paddingLeft="13dip"
        android:textColor="#3399cc"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/car_image"
        android:layout_width="0dip"
        android:layout_height="50dip"
        android:layout_alignBottom="@+id/car_image"
        android:layout_below="@id/alpha"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@+id/car_image"
        android:paddingBottom="5dip"
        android:src="@drawable/start_evaluating_sel" />

    <TextView
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:layout_marginLeft="20dip"
        android:singleLine="true"
        android:textColor="#333333"
        android:textSize="@dimen/standard_padding" />

</RelativeLayout>