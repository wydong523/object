<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eaf4f5"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#eaf4f5"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48dip"
            android:background="@drawable/titlebg" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/workorder_plan_material_return_btn"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/workorder_plan_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工单操作"
                    android:textColor="@color/white"
                    android:textSize="@dimen/standard_padding" />

                <TextView
                    android:id="@+id/workorder_plan_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="物料"
                    android:textColor="@color/white"
                    android:textSize="@dimen/half_padding" />
            </LinearLayout>

            <Button
                android:id="@+id/workorder_plan_material_return_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/return_btn"
                android:gravity="center" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip" >

            <TextView
                android:id="@+id/textView1"
                style="@style/edit_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/workorder_plan_material_project"
                android:layout_alignBottom="@+id/workorder_plan_material_project"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="7dip"
                android:text="项        目 " />

            <EditText
                android:id="@+id/workorder_plan_material_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textView1"
                android:background="@drawable/edit_bg2"
                android:hint="请选择项目"
                android:singleLine="true" />

            <ImageButton
                android:id="@+id/workorder_plan_material_project_btn"
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/edit_select_btn" />
        </RelativeLayout>
        
        
         <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip" >

            <TextView
                android:id="@+id/textView2"
                style="@style/edit_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/workorder_plan_material_line_type"
                android:layout_alignBottom="@+id/workorder_plan_material_line_type"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="7dip"
                android:text="行  类  型 " />

            <EditText
                android:id="@+id/workorder_plan_material_line_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textView2"
                android:background="@drawable/edit_bg2"
                android:hint="请选择行类型"
                android:singleLine="true" />

            <ImageButton
                android:id="@+id/workorder_plan_material_line_type_btn"
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/edit_select_btn" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip" >

            <EditText
                android:id="@+id/workorder_plan_material_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textView3"
                android:background="@drawable/edit_bg2"
                android:hint="请输入数量"
                android:inputType="number"
                android:singleLine="true" />

            <TextView
                android:id="@+id/textView3"
                style="@style/edit_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/workorder_plan_material_count"
                android:layout_alignBottom="@+id/workorder_plan_material_count"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="7dip"
                android:text="数        量 " />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip" >

            <TextView
                android:id="@+id/textView4"
                style="@style/edit_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/workorder_plan_material_unit"
                android:layout_alignBottom="@+id/workorder_plan_material_unit"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="7dip"
                android:text="单        位 " />

            <EditText
                android:id="@+id/workorder_plan_material_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textView4"
                android:background="@drawable/edit_bg2"
                android:hint="请选择单位"
                android:singleLine="true" />

            <ImageButton
                android:id="@+id/workorder_plan_material_unit_btn"
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/edit_select_btn" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip" >

            <EditText
                android:id="@+id/workorder_plan_material_unit_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textView5"
                android:background="@drawable/edit_bg2"
                android:hint="请输入单位成本"
                android:singleLine="true" />

            <TextView
                android:id="@+id/textView5"
                style="@style/edit_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/workorder_plan_material_unit_cost"
                android:layout_alignBottom="@+id/workorder_plan_material_unit_cost"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="7dip"
                android:text="单位成本 " />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip" >

            <EditText
                android:id="@+id/workorder_plan_material_line_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textView6"
                android:background="@drawable/edit_bg2"
                android:hint="请输入行成本"
                android:singleLine="true" />

            <TextView
                android:id="@+id/textView6"
                style="@style/edit_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/workorder_plan_material_line_cost"
                android:layout_alignBottom="@+id/workorder_plan_material_line_cost"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="7dip"
                android:text="行  成  本 " />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip" >

            <TextView
                android:id="@+id/textView7"
                style="@style/edit_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/workorder_plan_material_warehouse"
                android:layout_alignBottom="@+id/workorder_plan_material_warehouse"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="7dip"
                android:text="库        房 " />

            <EditText
                android:id="@+id/workorder_plan_material_warehouse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textView7"
                android:background="@drawable/edit_bg2"
                android:hint="请选择库房"
                android:singleLine="true" />

            <ImageButton
                android:id="@+id/workorder_plan_material_warehouse_btn"
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/edit_select_btn" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip" >

            <TextView
                android:id="@+id/textView8"
                style="@style/edit_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/workorder_plan_material_warehouse_location"
                android:layout_alignBottom="@+id/workorder_plan_material_warehouse_location"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="7dip"
                android:text="库房地点 " />

            <EditText
                android:id="@+id/workorder_plan_material_warehouse_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textView8"
                android:background="@drawable/edit_bg2"
                android:hint="请选择库房地点"
                android:singleLine="true" />

            <ImageButton
                android:id="@+id/workorder_plan_material_warehouse_location_btn"
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/edit_select_btn" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip" >

            <CheckBox
                android:id="@+id/workorder_plan_material_direct_distribution"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textView9"
                android:checked="true"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textView9"
                style="@style/edit_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/workorder_plan_material_direct_distribution"
                android:layout_alignBottom="@+id/workorder_plan_material_direct_distribution"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="7dip"
                android:text="直接发放" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="150dip"
            android:focusable="true"
            android:focusableInTouchMode="true" >

            <Button
                android:id="@+id/workorder_add_plan_material_btn"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/detailbtn"
                android:text="添加物料信息"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/workorder_del_plan_material_btn"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/workorder_modify_plan_material_btn"
                android:layout_marginTop="10dip"
                android:background="@drawable/detailbtn"
                android:text="删除物料信息"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/workorder_modify_plan_material_btn"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_alignBaseline="@+id/workorder_add_plan_material_btn"
                android:layout_alignBottom="@+id/workorder_add_plan_material_btn"
                android:layout_alignParentLeft="true"
                android:background="@drawable/detailbtn"
                android:text="修改物料信息"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>