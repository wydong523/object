<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="inbox_list_img">
        <item name="android:layout_width">40.0dip</item>
        <item name="android:layout_height">40.0dip</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">1.0dip</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/sp</item>
    </style>

    <style name="pr_list_img">
        <item name="android:layout_width">25dip</item>
        <item name="android:layout_height">25dip</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">1.0dip</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- 主标题title -->
    <style name="text_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/standard_padding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <!-- 子标题title -->
    <style name="sub_text_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- TextView标题样式 -->
    <style name="edit_text_title">
        <item name="android:textColor">@color/black_font</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/standard_padding</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!-- RelativeLayout标题布局 -->
    <style name="Rlayout_Title">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/frame_button_p</item>
        <item name="android:layout_marginTop">7dp</item>
    </style>

    <style name="frame_button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/login_bg</item>
        <item name="android:textColor">@color/frame_button_text_light</item>
    </style>

    <style name="opreta_button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:background">@drawable/frame_button_bg</item>
        <item name="android:textColor">@color/frame_button_text_light</item>
    </style>

    <style name="list_text_title">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/frame_button_text_light</item>
    </style>

    <style name="list_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black_font</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/standard_padding</item>
        <!-- <item name="android:ellipsize">marquee</item> -->
    </style>

    <style name="radiobutton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bottom_bg</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">0dip</item>
        <item name="android:paddingBottom">3dip</item>
        <item name="android:paddingTop">1dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Animations" />

    <!-- PopDownMenu -->
    <style name="Animations.PopDownMenu" />

    <style name="Animations.PopDownMenu.Left">
        <item name="@android:windowEnterAnimation">@anim/grow_from_topleft_to_bottomright</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottomright_to_topleft</item>
    </style>

    <style name="Animations.PopDownMenu.Right">
        <item name="@android:windowEnterAnimation">@anim/grow_from_topright_to_bottomleft</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottomleft_to_topright</item>
    </style>

    <style name="Animations.PopDownMenu.Center">
        <item name="@android:windowEnterAnimation">@anim/grow_from_top</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottom</item>
    </style>

    <!-- PopUpMenu -->
    <style name="Animations.PopUpMenu" />

    <style name="Animations.PopUpMenu.Left">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottomleft_to_topright</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_topright_to_bottomleft</item>
    </style>

    <style name="Animations.PopUpMenu.Right">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottomright_to_topleft</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_topleft_to_bottomright</item>
    </style>

    <style name="Animations.PopUpMenu.Center">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottom</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_top</item>
    </style>

    <!-- exit样式 -->
    <style name="exit_dialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="dialog" parent="@android:style/Theme.Dialog">
		<item name="android:windowFrame">@null</item><!--边框 -->
		<item name="android:windowIsFloating">true</item><!--是否浮现在activity之上 -->
		<item name="android:windowIsTranslucent">false</item><!--半透明 -->
		<item name="android:windowNoTitle">true</item>
		<item name="android:background">@drawable/dialog_bg</item>
		<item name="android:windowBackground">@null</item>
		<item name="android:backgroundDimEnabled">false</item><!--模糊 -->
	</style>

</resources>