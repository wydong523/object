<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/left_line"
        android:layout_width="2dip"
        android:layout_height="25dip"
        android:background="@drawable/shadow_long"
        android:contentDescription="@string/app_name"
        android:visibility="gone" />

    <TextView
        android:id="@+id/car_yearstyle_content_alpha"
        android:layout_width="fill_parent"
        android:layout_height="25dip"
        android:layout_toRightOf="@+id/left_line"
        android:background="@color/white"
        android:paddingLeft="13dip"
        android:textColor="#3399cc"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/line"
        android:layout_width="1dip"
        android:layout_height="80dip"
        android:layout_below="@id/car_yearstyle_content_alpha"
        android:background="@drawable/shadow_long" />

    <ImageView
        android:id="@+id/car_yearstyle_content_image"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:layout_below="@id/car_yearstyle_content_alpha"
        android:src="@drawable/start_evaluating_sel"
        android:visibility="gone" />

    <TextView
        android:id="@+id/car_yearstyle_content_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/car_yearstyle_content_image"
        android:layout_marginLeft="20dip"
        android:layout_toRightOf="@+id/car_yearstyle_content_image"
        android:singleLine="false"
        android:textColor="#333333"
        android:textSize="@dimen/standard_padding" />

</RelativeLayout>