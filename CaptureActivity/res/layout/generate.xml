<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget32"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/common_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingRight="@dimen/half_padding" >

        <Button
            android:id="@+id/return_button"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:background="@drawable/select_into"
            android:text="@string/return_button" 
            android:textSize="@dimen/standard_padding"
            android:textColor="@color/button"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:text="@string/username"
        android:textSize="@dimen/standard_padding" />

    <EditText
        android:id="@+id/gen_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:focusable="false"
        android:text="@string/username_input"
        android:textSize="@dimen/standard_padding" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:text="@string/email"
        android:textSize="@dimen/standard_padding" />

    <EditText
        android:id="@+id/gen_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/email_input"
        android:textSize="@dimen/standard_padding" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:text="@string/phone"
        android:textSize="@dimen/standard_padding" 
        android:focusable="false"/>

    <EditText
        android:id="@+id/gen_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/phone_input"
        android:textSize="@dimen/standard_padding" />

    <Button
        android:id="@+id/gen_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/bt_bg"
        android:padding="3dp"
        android:text="@string/gen_button"
        android:textSize="@dimen/standard_padding"
        android:textColor="@color/button" />

</LinearLayout>